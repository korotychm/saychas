mixin product(img,title,label)
  div.product
    div.product__label= label
    a(href="#").product__img
      img(src=img)
    a(href="#").product__title= title
    div.product__reviews
      div.product__reviews-grade
        include ../../img/icons/icon.svg
        span 4.7
      a(href="#").product__reviews-link 28 отзывов
    div.product__price
      div.product__price-current 17 990 ₽
      div.product__price-old 21 990 ₽
    div.product__tocart
      button.btn.btn--primary В корзину
