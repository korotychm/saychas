.pagination
  margin-top 50px
  display flex
  a
    text-decoration none
    color inherit
    width 55px
    height 55px
    border-radius 50%
    display flex
    align-items center
    justify-content center
    font-size 20px
    font-weight 500
    margin-right 10px
    background var(--gray)
    cursor pointer
    border 2px solid var(--gray)
    transition .3s
    &:hover
      border-color var(--red)
    &.active
      background var(--red)
      color #fff
      border-color var(--red)
