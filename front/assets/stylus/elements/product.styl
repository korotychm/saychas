.product
  padding 30px
  position relative
  background #fff
  border-radius 20px
  &:hover
    box-shadow 0px 5px 30px 0px rgba(66, 66, 66, 0.2)
    z-index 3
  a
    text-decoration none
  &__label
    position absolute
    top 10px
    right 10px
    background var(--red)
    color #fff
    font-size 12px
    text-transform uppercase
    padding 4px 12px
    border-radius 20px
    font-size 12px
    font-weight 700
  &__img
    display flex
    align-items center
    justify-content center
    img
      height 205px
      width 100%
      object-fit contain
  &__title
    font-size 20px
    line-height: 1.3
    display block
    margin 25px 0 12px
    color inherit
  &__reviews
    display flex
    align-items center
    font-size 16px
    margin-bottom 11px
    &-grade
      display flex
      align-items center
      color var(--red)
      font-weight bold
      margin-right 10px
      svg
        margin-right 5px
    &-link
      color var(--gray2)
  &__price
    display flex
    align-items center
    &-current
      font-size 24px
      font-weight bold
      margin-right 15px
    &-old
      color var(--gray2)
      text-decoration line-through
      font-size 20px
  &__tocart
    position absolute
    left 0
    margin-top 20px
    width 100%
    padding 0 30px 30px
    background #fff
    box-shadow 0px 10px 30px 0px rgba(66, 66, 66, 0.2)
    border-bottom-left-radius 20px
    border-bottom-right-radius 20px
    display none
    &::before
      content ''
      display block
      position absolute
      top -20px
      left 0
      height 20px
      width 100%
      background #fff
    .btn
      width 100%
  &:hover
    .product__tocart
      display block
  &__attributes
    list-style none
    margin 0
    padding 0
    margin-top 45px
    font-size 18px
    li
      margin-bottom 55px
      height 26px
      &:last-child
        margin-bottom 20px
      span
        display none
  &--recommendation
    .product__tocart
      position static
      padding 0
      display block
      box-shadow none
      &::before
        display none
      .btn
        opacity 0
        pointer-events none
    &:hover
      .btn
        opacity 1
        pointer-events auto
