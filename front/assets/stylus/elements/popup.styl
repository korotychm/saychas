.popup
  position fixed
  width 100vw
  height 100vh
  left 0
  top 0
  background rgba(0,0,0,.5)
  z-index 999
  display none
  &__inner
    position absolute
    background #fff
    border-radius 20px
    padding 50px
    top 50%
    left 50%
    transform translate(-50%,-50%)
  &__heading
    font-size 34px
    margin-bottom 30px
    font-weight bold
    padding-right 50px
  &__close
    width 18px
    height 18px
    position absolute
    top 50px
    right 50px
    cursor pointer
    &::before
    &::after
      content ''
      display block
      width 25px
      height 3px
      background var(--red)
      position absolute
      left 50%
      top 50%
      transform translate(-50%,-50%) rotate(45deg)
    &::after
      transform translate(-50%,-50%) rotate(-45deg)
