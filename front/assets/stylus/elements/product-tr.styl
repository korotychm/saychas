.product-small-image
  width 65px
  height 65px
  border-radius 50%
  overflow hidden
  display flex
  padding 10px
  img
    width 100%
    height 100%
    object-fit: contain
.product-tr
  display flex
  align-items center
  padding 10px 0
  &__img
    margin-right 30px
    flex-shrink 0
  &__title
    margin-right 30px
    font-size 20px
    font-weight 500
    width 350px
  &__quantity
    width 250px
    margin-right 30px
    flex-shrink 0
    font-size 24px
    display flex
    align-items center
    font-weight bold
    &-new
      margin-left 22px
      display flex
      align-items center
      &::before
        content ''
        display block
        width 11px
        height 17px
        margin-right 22px
        background url(../img/icons/icon-to.svg) no-repeat center
        background-size contain
  &__price
    width 110px
    margin-right 30px
    flex-shrink 0
    text-align right
    &-actual
      font-size 24px
      font-weight bold
    &-old
      margin-top 3px
      text-decoration line-through
      font-size 18px
      color var(--gray2)
  &__wishlist
    flex-shrink 0
    cursor pointer
    color var(--gray2)
    &.active
      color var(--red)
