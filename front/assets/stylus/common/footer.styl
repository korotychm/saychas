.footer
  padding 80px 0
  background var(--black)
  color #fff
  .container
    max-width 1490px
    display flex
    justify-content space-between
    @media (max-width: 1440px)
      max-width 1200px
    @media (max-width: 1279px)
      flex-wrap wrap
    @media (max-width: 767px)
      display block
  &__logo
    margin-right 50px
    flex-shrink 0
    @media (max-width: 1440px)
      margin-right 60px
      width 160px
      @media (max-width: 767px)
        width 200px
        margin-bottom 50px
        margin-right 0
      img
        width 100%
        height auto
  &__copyright
    margin-top 25px
    color #737373
    @media (max-width: 1440px)
      font-size 12px
  &__nav
    flex-shrink 0
    display flex
    @media (max-width: 767px)
      flex-wrap wrap
      margin-bottom 20px
    div
      width 190px
      @media (max-width: 1440px)
        width 155px
      @media (max-width: 1279px)
        width 130px
      @media (max-width: 767px)
        margin-bottom 30px
    a
      display block
      color #fff
      text-decoration none
      transition .3s
      font-size 16px
      margin-bottom 12px
      @media (max-width: 1440px)
        font-size 14px
      @media (max-width: 1279px)
        font-size 12px
      &:last-child
        margin-bottom 0
      &:hover
        color var(--red)
  &__contact
    flex-shrink 0
    margin-left 60px
    margin-top -4px
    @media (max-width: 1440px)
      margin-left 40px
    @media (max-width: 990px)
      margin-left 0
      margin-top 50px
    @media (max-width: 767px)
      margin-left 0
      margin-bottom 50px
      margin-top 0
  &__phone
    font-size 26px
    font-weight bold
    @media (max-width: 1440px)
      font-size 22px
  &__email
    font-size 18px
    margin-top 20px
    max-width 290px
    @media (max-width: 1440px)
      font-size 16px
      max-width 260px
    a
      color #fff
      text-decoration none
      transition .3s
      &:hover
        color var(--red)
    span
      color #737373
      display block
      font-size 14px
      @media (max-width: 1440px)
        font-size 12px
  &__right
    @media (max-width: 1279px)
      display flex
      justify-content space-between
      width 100%
    @media (max-width: 990px)
      display block
      width auto
      margin-top 50px
    @media (max-width: 767px)
      margin-top 0
    .icon-link
      font-size 16px
      @media (max-width: 1440px)
        font-size 14px
      svg
        color var(--red)
  &__icons
    margin-top 35px
    display flex
    justify-content flex-end
    @media (max-width: 767px)
      justify-content flex-start
    svg
      color var(--red)
      width 40px
      height 40px
      margin-left 20px
      @media (max-width: 767px)
        margin-right 20px
        margin-left 0
