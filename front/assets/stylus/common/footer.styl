footer
  background var(--black)
.footer
  display flex
  justify-content: space-between
  color #fff
  &__col
    display flex
  &__logo
    padding 5px 0
  &__info
    padding-top 80px
    margin-right 40px
  &__copyright
    font-size 16px
    line-height 1.375
    margin 0 0 22px
  &__social
    display flex
    flex-wrap wrap
    a
      display block
      text-decoration none
      width 40px
      height 40px
      margin 0 21px 9px 0
      svg
        width 100%
        height 100%
        color var(--red)
  &__nav
    padding-top 80px
    display flex
    &-col
      margin-right 60px
      &:last-child
        margin-right 0
    a
      display block
      color inherit
      text-decoration none
      margin-bottom 8px
      transition .5s
      &:hover
        color var(--red)
  &__right
    padding-top 80px
  &__dashboard-link
    display flex
    align-items center
    svg
      margin-right 9px
      color var(--red)
  &__icons
    display flex
    justify-content flex-end
    flex-wrap wrap
    margin-top 45px
  &__icon
    display block
    text-decoration none
    width 40px
    height 40px
    margin 0 0 9px 21px
    svg
      width 100%
      height 100%
      color var(--red)
