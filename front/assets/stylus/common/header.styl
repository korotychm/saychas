.header
  position relative
  margin-bottom 30px
  &__top
    background var(--black)
    position relative
    z-index 3
  &__nav
    display flex
    align-items center
    justify-content space-between
    padding-top 2px
    a
      color #fff
      text-decoration none
      line-height 54px
      display flex
      align-items center
      border-bottom 3px solid transparent
      transition border-color .3s
      @media (max-width: 1599px)
        font-size 14px
      &:hover
        @media (hover)
          border-color var(--red)
      svg
        margin-right 6px
        color var(--red)
  &__nav-items
    display flex
    align-items center
    a
      margin-right 25px
      @media (max-width: 1599px)
        margin-right 20px

  &__mid
    display flex
    justify-content space-between
    padding 10px 0 0
    &-left
      display flex
      & > div
        margin-top 28px
        @media (max-width: 1599px)
          margin-top 24px
  &__burger
    display flex
    align-items center
    justify-content center
    color #fff
    width 165px
    height 55px
    border-radius 55px
    background var(--red)
    padding-bottom 2px
    font-size 20px
    font-weight bold
    cursor pointer
    margin-right 55px
    font-weight 600
    user-select none
    @media (max-width: 1599px)
      width 150px
      font-size 18px
      margin-right 35px
      height 50px
    &-icon
      width 15px
      height 14px
      margin-right 10px
      position relative
      span
        display block
        position absolute
        left 0
        top 6px
        width 100%
        height 2px
        background #fff
        transition .3s
        &:first-child
          transform translateY(-6px)
        &:last-child
          transform translateY(6px)
  #burger
    display none
    &:checked
      ~ .cats
        opacity 1 !important
        pointer-events auto !important
      ~ .header__burger
        position relative
        .header__burger-icon span
          &:first-child
            transform rotate(45deg)
          &:last-child
            transform rotate(-45deg)
          &:nth-child(2)
            opacity 0



  &__logo
    margin-top 0 !important
    margin-right 58px
    width 205px
    @media (max-width: 1599px)
      width 180px
      margin-right 40px
      margin-bottom 7px
    svg
    img
      display block
      width 100%
      height auto


  &__search
    width 400px
    margin-right 58px
    @media (max-width: 1599px)
      width 320px
      margin-right 40px
    &-tooltip
      font-size 14px
      color var(--gray2)
      margin-top 8px
      @media (max-width: 1599px)
        font-size 12px
      span
        color var(--black)
  &__address
    width 260px
    margin-top 23px !important
    position relative
    z-index 2
    @media (max-width: 1599px)
      width 230px
      margin-right 30px
    &-close
      width 30px
      height 30px
      cursor pointer
      position absolute
      right 17px
      top 13px
      &::before
      &::after
        content ''
        width 30px
        height 2px
        display block
        position absolute
        background var(--red)
        top 50%
        left 50%
        transform translate(-50%,-50%) rotate(45deg)
      &::after
        transform translate(-50%,-50%) rotate(-45deg)
    &-input
      position absolute
      top -200px
      left -45px
      width calc(100% + 95px)
      margin-top 4px
      z-index 2
      input
        padding-right 60px
    &-error
      font-size 14px
      margin-top 8px
      color var(--red)
    &-title
      display flex
      align-items center
      font-size 16px
      margin 4px 0 6px
      @media (max-width: 1599px)
        font-size 14px
        margin-bottom 3px
      svg
        margin-right 7px
        color var(--red)
    &-val
      padding-left 25px
      font-size 18px
      font-weight 600
      line-height 1.3
      cursor pointer
      transition: .3s
      position relative
      padding-bottom 20px
      @media (max-width: 1599px)
        font-size 14px
      &__dropdown
        background #fff
        box-shadow: 0px 5px 35px 0px rgba(66, 66, 66, 0.2)
        position absolute
        padding 20px 30px
        opacity 0
        pointer-events none
        left 50%
        bottom 0
        transform translate(-50%, 100%)
        transition .3s
        &-item
          display block
          font-size 18px
          font-weight 500
          padding 5px 0
          color var(--black)
          white-space nowrap
          transition .3s
          &:hover
            @media (hover)
              color var(--red)
          &.open-user-address-form
            color var(--red)
            font-weight 600
        &::before
          content ''
          width 20px
          height 20px
          display block
          background #fff
          position absolute
          left 50%
          top -10px
          transform translateX(-50%) rotate(45deg)
      &:hover
        @media (hover)
          color var(--red)
        .header__address-val__dropdown
          opacity 1
          pointer-events auto

  &__icons
    display flex
    justify-content space-between
    width 220px
    margin-top 23px
    a
      text-decoration none
      color inherit
      font-size 20px
      font-weight 500
      @media (max-width: 1599px)
        font-size 16px
  &__profile
    position relative
    &-popup
      position absolute
      bottom 22px
      left 50%
      transform translate(-50%,100%)
      background #fff
      padding 30px 35px
      border-radius 20px
      box-shadow: 0px 5px 35px 0px rgba(66, 66, 66, 0.2)
      z-index 10
      opacity 0
      pointer-events none
      &::before
        content ''
        width 20px
        height 20px
        display block
        background #fff
        position absolute
        left 50%
        top -10px
        transform translateX(-50%) rotate(45deg)
      a
        display flex
        align-items center
        white-space nowrap
        margin 5px 0
        cursor pointer
        svg
          color var(--red)
          margin-right 5px
      &--links
        a:first-child
          margin-bottom 10px
        a:last-child
          margin-top 10px
    &:hover
      @media(hover)
        .header__profile-popup
          opacity 1
          pointer-events auto

  &__icon
    position relative
    text-align center
  &__cart-count
    position absolute
    top 24px
    right 34px
    width 24px
    height 24px
    color #fff
    background var(--red)
    border-radius 50%
    display flex
    align-items center
    justify-content center
    font-size 16px
    font-weight bold
  &__bottom
    background var(--gray)
    display flex
    align-items center
    justify-content space-between
    padding 0 60px
    border-radius 74px
    @media (max-width: 1599px)
      padding 0 35px
    a
      text-decoration none
      color inherit
      font-size 22px
      line-height 68px
      border-bottom 3px solid transparent
      transition .3s
      padding-top 3px
      font-weight 500
      @media (max-width: 1599px)
        font-size 19px
        line-height 55px
      &:hover
        text-shadow: 0px 0px 1px var(--black);
        border-bottom 3px solid var(--red)

.search
  position relative
  input
    width 100%
    height 55px
    border 2px solid var(--red)
    -webkit-appearance none
    border-radius 55px
    font-size 20px
    padding 1px 22px 0
    outline none !important
    @media (max-width: 1599px)
      height 50px
      font-size 16px
    &::placeholder
      color var(--gray2)



  button
    width 30px
    height 30px
    position absolute
    right 17px
    top 50%
    transform translateY(-50%)
    background url(../img/icons/search.svg) no-repeat center
    border none
    outline none !important
    padding 0
    -webkit-appearance none
    cursor pointer
    font-size 0

.cats
  width 1550px
  position absolute
  background #fff
  top 200px
  margin-left -30px
  border-radius 20px
  overflow hidden
  box-shadow: 0px 5px 35px 0px rgba(66, 66, 66, 0.2)
  z-index 30
  display grid
  grid-template-columns 350px calc(100% - 350px)
  opacity 0
  pointer-events none
  transition .3s
  &__right
    position relative
  &__left
    background var(--red)
    padding 20px
    padding-right 0
    min-height 600px
    padding-bottom 30px
  &__parent
    padding 12px 25px
    border-top-left-radius 50px
    border-bottom-left-radius 50px
    font-weight 500
    color #fff
    text-decoration none
    display block
    font-size 18px
    transition .3s
  &__item
    &.active
      .cats__parent
        background #fff !important
        color var(--black)
        text-shadow: 0px 0px 1px var(--black)
  &__children
    column-count 3
    column-gap 80px
    padding 40px 50px
    // max-height 740px
    // overflow-y auto
    // direction rtl
    // &::-webkit-scrollbar
    //   width: 3px
    // &::-webkit-scrollbar-track
    //   background-color var(--gray)
    // &::-webkit-scrollbar-thumb
    //   background-color var(-red)
    ul
      margin 0
      display grid
      grid-template-rows 1fr auto
      margin 0
      padding 0
      margin-bottom 50px
      break-inside avoid
      list-style none
      direction ltr
      a
        text-decoration none
        color inherit
        transition .3s
        padding 5px 0
        display block
        &.cats__all
          color var(--gray2)
        &:hover
          @media (hover)
            color var(--red)
      li
        font-size 18px
        font-weight 500
      > li
        &:first-child
          font-size 20px
          font-weight bold
          margin-bottom 10px
