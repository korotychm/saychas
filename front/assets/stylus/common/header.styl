.header
  position relative
  margin-bottom 30px
  &__top
    background var(--black)
  &__nav
    display flex
    align-items center
    justify-content space-between
    padding-top 2px
    a
      color #fff
      text-decoration none
      line-height 54px
      display flex
      align-items center
      border-bottom 3px solid transparent
      transition border-color .3s
      &:hover
        @media (hover)
          border-color var(--red)
      svg
        margin-right 6px
        color var(--red)
  &__nav-items
    display flex
    align-items center
    a
      margin-right 25px

  &__mid
    display flex
    justify-content space-between
    padding 10px 0 0
    &-left
      display flex
      & > div
        margin-top 28px
  &__burger
    display flex
    align-items center
    justify-content center
    color #fff
    width 165px
    height 55px
    border-radius 55px
    background var(--red)
    padding-bottom 2px
    font-size 20px
    font-weight bold
    cursor pointer
    margin-right 55px
    font-weight 600
    &-icon
      width 15px
      height 14px
      display grid
      grid-gap 4px
      margin-right 10px
      span
        width 100%
        height 2px
        background #fff
  #burger
    display none
  &__logo
    margin-top 0 !important
    margin-right 58px
  &__search
    width 400px
    margin-right 58px
    &-tooltip
      font-size 14px
      color var(--gray2)
      margin-top 8px
      span
        color var(--black)
  &__address
    width 260px
    margin-top 23px !important
    &-title
      display flex
      align-items center
      font-size 16px
      margin-bottom 6px
      svg
        margin-right 7px
        color var(--red)
    &-val
      padding-left 28px
      font-size 18px
      font-weight 600
      line-height 1.3
  &__icons
    display flex
    justify-content space-between
    width 220px
    margin-top 23px
    a
      text-decoration none
      color inherit
      font-size 20px
      font-weight 500
  &__profile
    position relative
    &-popup
      position absolute
      bottom 22px
      left 50%
      transform translate(-50%,100%)
      background #fff
      padding 30px 35px
      border-radius 20px
      box-shadow: 0px 5px 35px 0px rgba(66, 66, 66, 0.2)
      z-index 10
      opacity 0
      pointer-events none
      &::before
        content ''
        width 20px
        height 20px
        display block
        background #fff
        position absolute
        left 50%
        top -10px
        transform translateX(-50%) rotate(45deg)
      a
        display flex
        align-items center
        white-space nowrap
        margin 5px 0
        cursor pointer
        svg
          color var(--red)
          margin-right 5px
      &--links
        a:first-child
          margin-bottom 10px
        a:last-child
          margin-top 10px
    &:hover
      @media(hover)
        .header__profile-popup
          opacity 1
          pointer-events auto

  &__icon
    position relative
    text-align center
  &__cart-count
    position absolute
    top 0
    right 8px
    width 24px
    height 24px
    color #fff
    background var(--red)
    border-radius 50%
    display flex
    align-items center
    justify-content center
    font-size 16px
    font-weight bold
  &__bottom
    background var(--gray)
    display flex
    align-items center
    justify-content space-between
    padding 0 60px
    border-radius 74px
    a
      text-decoration none
      color inherit
      font-size 22px
      line-height 68px
      border-bottom 3px solid transparent
      transition .3s
      padding-top 3px
      font-weight 500
      &:hover
        text-shadow: 0px 0px 1px var(--black);
        border-bottom 3px solid var(--red)

.search
  position relative
  input
    width 100%
    height 55px
    border 2px solid var(--red)
    -webkit-appearance none
    border-radius 55px
    font-size 20px
    padding 1px 22px 0
    outline none !important
    &::placeholder
      color var(--gray2)



  button
    width 30px
    height 30px
    position absolute
    right 17px
    top 50%
    transform translateY(-50%)
    background url(../img/icons/search.svg) no-repeat center
    border none
    outline none !important
    padding 0
    -webkit-appearance none
    cursor pointer
    font-size 0
