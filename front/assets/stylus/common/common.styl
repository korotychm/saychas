:root
  --red: #ff4b2d
  --black: #252525
  --gray: #f2f2f2
  --gray2: #a7a7a7
body
  padding 0
  margin 0
  color var(--black)
  overflow-x: hidden
*
  box-sizing border-box
  font-family: 'Montserrat'
.main
  min-height calc(100vh - 600px)
  @media (max-width: 767px)
    overflow: hidden
    margin-top 20px
.container
  width 1490px
  margin auto
  @media (max-width: 1599px)
    width 1200px
  @media (max-width: 767px)
    width 100%
    padding 0 15px
.h2
  font-size 46px
  font-weight bold
  line-height 1.2
  @media (max-width: 1599px)
    font-size: 36px
  @media (max-width: 767px)
    font-size: 28px
.section
  padding 30px 0
  &__heading
    margin 0 0 1em

.page-heading
  display flex
  justify-content space-between
  align-items center
  font-size 46px
  margin-bottom 1em
  @media (max-width: 1599px)
    font-size 36px
  @media (max-width: 767px)
    font-size 24px
  .h1
    font-size inherit
    font-weight bold
    line-height 1.2
    margin 0

.btn
  display inline-flex
  height 55px
  border-radius 55px
  align-items center
  justify-content center
  font-size 20px
  font-weight bold
  border none
  text-decoration none
  outline none
  cursor pointer
  font-weight 600
  transition color .3s, background-color .3s, border-color .3s
  padding 0 25px
  @media (max-width: 1599px)
    font-size 18px
    height 50px
  @media (max-width: 767px)
    font-size 14px
    padding 0 20px
  &--primary
    background var(--red)
    color #fff
    &:hover
      @media (hover)
        background var(--black)
  &--secondary
    background transparent
    border 2px solid var(--red)
    color var(--black)
    &:hover
      @media (hover)
        background var(--black)
        border-color var(--black)
        color #fff
  &.disabled
    pointer-events none
    filter grayscale(1)
    opacity .5
  &.success
    border-color #b8df00
    pointer-events none

.button-with-info
  position relative
  padding-bottom 15px
  margin-bottom -15px
  &__info
    position absolute
    bottom 0
    left 50%
    transform translate(-50%, 100%)
    background #fff
    padding 30px 35px
    border-radius 20px
    box-shadow: 0px 5px 35px 0px rgba(66, 66, 66, 0.2)
    z-index 10
    opacity 0
    pointer-events none
    font-size 18px
    min-width 100%
    &::before
      content ''
      width 20px
      height 20px
      display block
      background #fff
      position absolute
      left 50%
      top -10px
      transform translateX(-50%) rotate(45deg)
    a
      cursor pointer
  &:hover .button-with-info__info
    opacity 1
    pointer-events auto

input[type="number"]
  -moz-appearance textfield
  &::-webkit-outer-spin-button
  &::-webkit-inner-spin-button
    -webkit-appearance none
    margin 0
