.products-carousel
  display none
  .slick-list
    margin -30px -15px
    padding 30px 0
    overflow visible
    @media (max-width: 767px)
      margin -30px -10px
      overflow hidden
    &::before
    &::after
      content ''
      width 50vw
      height 100%
      display block
      top 0
      left -15px
      transform translateX(-100%)
      position absolute
      background #fff
      z-index 2
      @media (max-width: 767px)
        display none
    &::after
      left auto
      right -15px
      transform translateX(100%)
    &:hover::before
      left -15px !important
    &:hover::after
      right 0 !important
  &:hover .slick-list::before
    left 15px
  &:hover .slick-list::after
    right 15px
  .slick-slide
    margin 0 15px
    @media (max-width: 767px)
      margin 0 10px
