.basketbottom
  display block
  position fixed
  bottom 50px
  left 50px
  transform translateY(calc(100% + 100px));
  z-index 99
  transition .7s transform ease-in-out
  padding 30px
  box-shadow: 0px 5px 35px 0px rgba(66, 66, 66, 0.2)
  background #fff
  border-radius 20px
  max-height 50vh
  overflow-y auto
  &.active
    transform translateY(0)
  &__item
    display flex
    align-items center
    margin 10px 0
  &__img
    display flex
    align-items center
    justify-content center
    width 65px
    height 65px
    margin-right 30px
    img
      object-fit contain
      width 100%
      height 100%
  &__text
    max-width 300px
    font-size 18px
    font-weight bold
  &__close
    width 30px
    height 30px
    position absolute
    top 10px
    right 10px
    cursor pointer
    &::before
    &::after
      content ''
      display block
      width 30px
      height 2px
      background var(--red)
      position absolute
      top 50%
      left 0
      transform translateY(-50%) rotate(45deg)
    &::after
      transform translateY(-50%) rotate(-45deg)
