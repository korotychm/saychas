.product-card
  margin-bottom 50px
  &__heading
    margin 20px 0 25px
    h1
      margin 0
      font-size 34px
  &__top
    display flex
    align-items center
    justify-content space-between
  &__grade
    display flex
    align-items center
    font-size 18px
    &-icons
      display flex
      margin-right 4px
      div
        color var(--gray)
        margin-right 4px
        svg
          display block
        &.active
          color var(--red)
    &-val
      font-weight bold
      margin-right 18px
  &__reviews-link
    text-decoration none
    color var(--red)
  &__code
    font-size 18px

  &__main
    display grid
    grid-template-columns 65px minmax(0,1fr) minmax(0,1fr) minmax(0,1fr)
    grid-gap 30px
    margin-top 40px
  &__img-block
    display grid
    grid-template-columns 65px calc(100% - 95px)
    grid-gap 30px
  &__small-img
    display flex
    align-items center
    justify-content center
    width 65px
    height 65px
    border-radius 50%
    border 2px solid #fff
    margin-bottom 15px
    cursor pointer
    overflow hidden
    padding 5px
    &.last-child
      margin-bottom 0
    &.active
      border-color var(--red)
    img
      object-fit contain
      width 100%
      height 100%

  &__img
    > div
      position relative
      &::before
        content ''
        display block
        padding-top 100%
  &__big-img
    position absolute
    width 100%
    height 100%
    top 0
    left 0
    opacity 0
    pointer-events none
    transition opacity .3s
    display flex
    border-radius 20px
    overflow hidden
    &.active
      opacity 1
      pointer-events auto
    img
      object-fit contain
      width 100%
      height 100%

  &__options
    &-item
      margin-bottom 30px
    &-title
      font-size 18px
      margin 0 0 12px
      font-weight normal
    &-products
      display flex
      padding 0
      margin 0
      list-style none
    &-img
      display flex
      align-items center
      justify-content center
      width 65px
      height 65px
      border-radius 50%
      border 2px solid #fff
      margin-right 15px
      cursor pointer
      overflow hidden
      padding 5px
      &.active
        border-color var(--red)
      img
        object-fit contain
        width 100%
        height 100%

  &__store
    display flex
    align-items center
    margin-top 35px
    &-logo
      width 170px
      height 65px
      margin 0 30px 0 20px
      display flex
      justify-content center
      align-items center
      img
        object-fit contain
        width 100%
        height 100%
    a
      color var(--red)
      text-decoration none
      font-weight 500
  &__to-table
    color var(--red)
    text-decoration none
    font-weight bold
    display inline-block
    margin-top 10px
  &__table
    list-style none
    margin 0
    padding 0
    a
      color var(--red) !important
      text-decoration none
    &-tr
      position relative
      display flex
      align-items flex-start
      font-size 16px
      font-weight 500
      margin-bottom 18px
      overflow hidden
      &::before
        content '.....................................................................................................................'
        display block
        font-size 30px
        color var(--gray)
        overflow hidden
        order 2
        width 100%
        margin-top -14px
    &-th
    &-val
      background #fff
      position relative
      padding-left 7px
      order 3
      flex-shrink 0
      > div
        display flex
        align-items center
        .cirkul
          width 16px !important
          height 16px !important
          border-radius 50%
          margin-right 5px
    &-th
      padding-left 0
      padding-right 7px
      order 1
      display flex
      align-items center

  h2.product-card__section-heading
    font-size 34px
    margin 0 0 30px
  &__description
    grid-column span 3
    margin-bottom 30px
    &-toggle
      color var(--red)
      text-decoration none
      font-weight bold
      display inline-block
      margin-top 20px
      cursor pointer
      &::before
        content 'Развернуть описание ↓'
    &-text
      font-size 18px
      position relative
      &--spoiler
        max-height 110px
        overflow-y hidden
        &::after
          content ''
          display block
          width 100%
          height 100%
          background linear-gradient(to top, rgba(255,255,255,1), rgba(255,255,255,0))
          position absolute
          bottom 0
          left 0
          pointer-events none
      p
        line-height 1.55
        margin 0 0 15px
        &:last-child
          margin-bottom 0
    &.active
      .product-card__description-text
        max-height none
        &::after
          display none
      .product-card__description-toggle::before
        content 'Свернуть описание ↑'



  &__full-table
    grid-column span 3
    a
      color var(--red)
      text-decoration none
    h3
      font-size 22px
      margin 25px 0 15px
    tr
      display flex
      align-items center
      margin-bottom 5px
    td
      font-size 18px
      &:first-child
        display flex
        align-items center
        width 570px
        span
          flex-shrink 0
          padding-right 7px
        .question
          margin-left 0
          margin-right 7px
          flex-shrink 0
        &::after
          content '....................................................................................................................'
          display block
          font-size 30px
          color var(--gray)
          overflow hidden
          order 2
          width 100%
          margin-top -7px
          margin-right 4px
      &.table__heading
        width 100%
        &::after
          display none !important

  &__file
    display flex
    align-items center
    margin-bottom 20px
    svg
      margin-right 20px
      display block
      flex-shrink 0
    a
      font-size 16px
      color inherit
      text-decoration none
      font-weight 500
      transition .5s
      &:hover
        @media (hover)
          color var(--red)
      span
        color var(--gray2)
        display block
        margin-top 3px

.recommendations
  margin-top 50px
  position relative
  grid-column span 4
  .slick-arrow
    top 160px
  &__table
    position absolute
    bottom 60px
    left 0
    width 100%
    margin 0
    padding 0 30px
    list-style none
    pointer-events none
    font-size 18px
    color var(--gray2)
    li
      margin-bottom 55px
      display flex
      span
        flex-shrink 0
        margin-right 5px
      &::after
        content '...................................................................................................................................................................................................................'
        display block
        font-size 30px
        color var(--gray)
        overflow hidden
        order 2
        width 100%
        margin-top -11px
        margin-right 4px
      &:last-child
        margin-bottom 20px


.testimonials
  grid-column span 3
  &__sort
    margin 50px 0 40px
    height 55px
    width 350px
  &__photo
    position relative
    &::before
      content ''
      display block
      padding-top 100%
    a
      border-radius 50%
      overflow hidden
      display flex
      width 100%
      height 100%
      position absolute
      top 0
      left 0
      img
        width 100%
        height 100%
        object-fit contain
  &__photos
    .slick-list
      margin 0 -7px
    .slick-slide
      margin 0 7px
    .slick-prev
      left 44px
    .slick-next
      right 43px
    .slick-disabled
      opacity 0
      pointer-events none
  &__items
    .btn
      margin-left 95px
  &__item
    display grid
    grid-template-columns minmax(0,65px) minmax(0,calc(100% - 65px))
    grid-gap 30px
    align-items flex-start
    margin-bottom 50px
    &:last-child
      margin-bottom 0
  &__store
    margin 0
    font-size 18px
    font-weight bold
  &__answer
    padding-left 65px
    margin-top 30px
    &-heading
      display flex
      align-items center
      margin-bottom 20px
  &__heading
    display flex
    align-items center
    margin-bottom 15px
  &__name
    font-size 22px
    margin 0
    font-weight bold
  &__info
    margin-left 30px
    color var(--gray2)
    font-size 18px
  &__text
    font-size 18px
    line-height 1.55
    p
      margin 0 0 10px
      font-size 18px
      line-height 1.55
    .testimonials__photos
      display flex
      margin-top 25px
    .testimonials__photo
      width 85px
      margin-right 15px
  &__grade
    display flex
    margin-bottom 25px
    div
      color var(--gray)
      margin-right 4px
      svg
        display block
      &.active
        color var(--red)
  &__avatar
    border-radius 50%
    background var(--gray)
    position relative
    &::before
      content ''
      display block
      padding-top 100%
    &-letter
      position absolute
      top 50%
      left 50%
      transform translate(-50%,-50%)
      font-size 34px
      font-weight 700
      color #fff
      text-transform uppercase
    &-img
      position absolute
      top 0
      left 0
      width 100%
      height 100%
      display flex
      img
        object-fit contain
        width 100%
        height 100%



.testimonials-panel
  padding 30px
  box-shadow 0px 5px 30px 0px rgba(66, 66, 66, 0.2)
  border-radius 20px
  text-align center
  &__info
    margin-bottom 40px
  &__grade
    display flex
    align-items center
    margin-bottom 35px
    &-val
      font-size 46px
      font-weight 700
      margin-right 15px
    &-count
      font-size 18px
      span
        background var(--red)
        color #fff
        padding 4px 12px
        font-weight bold
        border-radius 20px
  .btn
    width 100%
  &__item
    margin-bottom 24px
    display flex
    align-items center
    font-size 20px
    span
      flex-shrink 0
      &:first-child
        width 22px
      &:last-child
        padding-left 12px
    &:last-of-type
      margin-bottom 0
  &__graph
    width 100%
    background var(--gray)
    &-current
      height 3px
      background var(--red)
  &__link
    text-decoration none
    margin-top 20px
    display inline-block
    color var(--gray2)
    transition .3s
    &:hover
      color var(--red)



.question
  margin-left 7px
  width 20px
  position relative
  &__icon
    width 20px
    height 20px
    background var(--gray)
    border-radius 50%
    display flex
    align-items center
    justify-content center
    position absolute
    left 0
    top 50%
    transform translateY(-50%)
    font-size 12px
    font-weight bold
    cursor pointer

.panel
  box-shadow 0px 5px 30px 0px rgba(66, 66, 66, 0.2)
  border-radius 20px
  background #fff
  position relative
  padding 30px
  &__label
    position absolute
    top 10px
    right 10px
    background var(--red)
    color #fff
    font-size 12px
    text-transform uppercase
    padding 4px 12px
    border-radius 20px
    font-size 12px
    font-weight 700
  &__price
    display flex
    align-items center
    margin-bottom 20px
    &-current
      font-size 34px
      font-weight bold
      margin-right 15px
    &-old
      color var(--gray2)
      text-decoration line-through
      font-size 24px
  &__bonuses
    display flex
    align-items center
    font-size 18px
    margin-bottom 30px
    span
      background var(--red)
      padding 4px 12px
      border-radius 20px
      color #fff
      font-weight 700
      margin-right 5px
  &__delivery
    &-item
      display flex
      margin-top 35px
      svg
        color var(--red)
        margin-right 10px
        flex-shrink 0
      h2
        margin -3px 0 0
        font-size 20px
        font-weight normal
        b
          font-weight bold
      p
        margin 0
        font-size 16px
        color var(--gray2)
        margin-top 5px
    &-price
      margin-left 12px
      font-weight 500
      &::before
        content '/'
        color var(--gray)
        padding-right 12px
  &__btn-group
    margin 40px 0 30px
    .btn
      margin-right 10px
      &:last-child
        margin 0
  &__to-wishlist
    display flex
    align-items center
    font-size 18px
    cursor pointer
    transition .3s
    &:hover
      @media (hover)
        color var(--red)
    svg
      color var(--red)
      margin-right 10px
  &__zip
    height 15px
    margin 0 -29px
    background url(../img/ui/wave.png) repeat-x
    background-size contain

.review-form
  text-align left
  .testimonials__grade
    margin-bottom 30px
    > div
      cursor pointer
  .textarea
    width 450px
    display block
    resize vertical
    border-radius 20px
    border 2px solid var(--gray)
    font-size 18px
    padding 25px
    margin-bottom 30px
    height 180px
    outline none
    &:focus
      border-color var(--red) !important

  &__photos
    display flex
    flex-wrap wrap
    margin-bottom 30px
    &-preview
      width 55px
      height 55px
      overflow hidden
      border-radius 50%
      display flex
      position relative
      margin-right 20px
      img
        width 100%
        height 100%
        object-fit cover
    &-del
      width 55px
      height 55px
      border-radius 50%
      position absolute
      top 0
      left 0
      background rgba(0,0,0,.6)
      opacity 0
      transition .3s
      cursor pointer
      &::before
      &::after
        content ''
        display block
        width 25px
        height 2px
        background #fff
        border-radius 2px
        position absolute
        top 27px
        left 15px
        transform rotate(45deg)
      &::after
        transform rotate(-45deg)
      &:hover
        opacity 1
    &-add
      display none
      input
        display none
      label
        width 55px
        height 55px
        border-radius 50%
        border 2px solid var(--red)
        background url(/img/ui/nophoto.jpg) no-repeat center
        background-size cover
        cursor pointer
        display block
      &:last-child
        display block
