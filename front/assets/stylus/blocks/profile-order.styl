.order-btn-group
  display: flex
  .btn:last-child
    margin-left 15px
.page-heading__back
  width 55px
  height 55px
  border-radius 50%
  border 2px solid var(--gray)
  display flex
  align-items center
  justify-content center
  cursor pointer
  color var(--red)
  margin-right 20px
  transition .3s
  &:hover
    @media (hover)
      color #fff
      background var(--red)
      border-color var(--red)
.profile-order
  .page-heading h1
    display flex
    align-items center
  &__wrap
    display grid
    grid-template-columns minmax(0,11fr) minmax(0,5fr)
    grid-gap 30px
    align-items flex-start
  &__requisitions
    display grid
    grid-template-columns 1fr
    grid-gap 20px
  &__requisition
    padding 50px 45px
    border-radius 20px
    border 2px solid var(--gray)
    &-head
      font-size 34px
      font-weight bold
      display flex
      align-items center
      span
        margin-right 30px
    &-logo
      margin-right 30px
      img
        display block
        width 160px
        height auto
    &-items
      margin-top 30px
