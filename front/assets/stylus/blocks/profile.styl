.profile-page
  display grid
  grid-template-columns minmax(0,4fr) minmax(0,12fr)
  grid-gap 30px
  .panel
    &--history
      position static !important
    &__delivery
      margin-bottom 25px
    &__zip
    &__bonuses
    &__table
      display none

.profile-nav
  a
    text-decoration none
    font-size 20px
    color inherit
    display block
    margin-bottom 10px
    transition .3s
    &:hover
      @media (hover)
        color var(--red)
    &.active
      color var(--red)

.orders-history
  display grid
  grid-template-columns 1fr
  grid-gap 50px
  padding-bottom 50px
  &__item
    display grid
    grid-template-columns minmax(0,5fr) minmax(0,4fr)
    padding 50px
    border 2px solid var(--gray)
    border-radius 20px
    grid-gap 30px
  &__delivery
    margin-top 35px
    &:first-child
      margin-top 0
    &-item
      display flex
      align-items center
    h2
      font-size 34px
      margin 0
      flex-shrink 0
      margin-right 20px

  &__statuses
    display flex
    flex-wrap wrap
  &__status
    font-size 14px
    text-transform uppercase
    color #fff
    background #dbdbdb
    font-weight bold
    padding 7px 10px
    border-radius 25px
    margin 5px 5px 5px 0
    &--link
      border 2px solid var(--red)
      background #fff
      color var(--black)
      transition .3s
      cursor pointer
      &:hover
        @media (hover)
          color #fff
          background var(--red)
    &--canceled
      background var(--black)
    &--ready
      background var(--red)
    &--deliveried
      background #b8df00
    &--progress
      position relative
      overflow hidden
      span
        position relative
      &::before
        content ''
        display block
        height 100%
        width 50%
        border-radius 20px
        position absolute
        top 0
        left 0
        background var(--red)
  &__text
    margin-top 15px
    font-size 18px
    p
      margin 0
      margin-bottom 5px
      &:last-child
        margin 0
  &__products
    margin-top 35px
    display flex
    flex-wrap wrap
    a
      text-decoration none
      margin-right 10px
      margin-bottom 10px
  &__detailed-trigger
    display none
    &:checked
      ~ .panel__delivery
        margin-bottom 0
      ~ .panel__zip
      ~ .panel__table
        display block
      ~ .panel__bonuses
        display flex


.product-small-img
  width 65px
  height 65px
  display flex
  align-items center
  justify-content center
  img
    width 100%
    height 100%
    object-fit contain
