.header
  display flex
  align-items center
  justify-content space-between
  padding 40px 0
  border-bottom 3px solid #fff
  margin-bottom 34px
  &__heading
    display flex
    align-items center
    font-size 34px
    margin 0
  &__back
    margin-right 17px
    width 55px
    height 55px
    display flex
    align-items center
    justify-content center
    border-radius 50%
    background #fff
    color var(--red)
    text-decoration none
    transition .3s
    &:hover
      background var(--red)
      color #fff
  &__user
    display flex
    align-items center
    &-name
      text-align right
      h2
        font-size 20px
        margin 0 0 5px
      p
        font-size 18px
        margin 0
    &-avatar
      width 65px
      height 65px
      display flex
      align-items center
      justify-content center
      border-radius 50%
      background #fff
      color var(--gray)
      font-size 34px
      text-transform uppercase
      font-weight 900
      margin-left 18px
