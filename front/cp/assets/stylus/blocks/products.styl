.products
  &__list
    padding 40px
    background #fff
    box-shadow: 0px 5px 35px 0px rgba(66, 66, 66, 0.2)
    border-radius 20px
    .thead
    .tr
      display flex
      align-items center
    .td
      width 100%
      &:nth-child(1)
        width 65px
        margin-right 30px
        flex-shrink 0
      &:nth-child(2)
        width 320px
        margin-right 65px
        flex-shrink 0
      &:nth-child(3)
        width 315px
        margin-right 65px
        flex-shrink 0
    .thead
      margin-bottom 40px
      .td
        color rgb(167, 167, 167)
        font-size 16px
    .tbody
      .tr
        margin-bottom 20px
        &:last-child
          margin-bottom 0
      .td
        font-size 20px
  &__img
    display flex
    align-items center
    justify-content center
    img
      display block
      object-fit contain
      height 65px
      width 65px
  &__title
    font-size 20px
    a
      color inherit
      text-decoration none
      transition .3s
      &:hover
        color var(--red)
  &__category
    font-size 16px !important
    div:last-child
      font-size 20px


.pagination
  display flex
  align-items center
  margin-top 40px
  a
    width 55px
    height 55px
    border-radius 50%
    border 2px solid #fff
    display flex
    align-items center
    justify-content center
    margin-right 9px
    font-size 20px
    font-weight 600
    text-decoration none
    color inherit
    transition .3s
    cursor pointer
    &.active
      background #fff
    &:hover
      color var(--red)
