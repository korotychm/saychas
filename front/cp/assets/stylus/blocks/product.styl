.product
  padding 40px
  background #fff
  box-shadow: 0px 5px 35px 0px rgba(66, 66, 66, 0.2)
  border-radius 20px
  &__error
    color var(--red)
    font-size 20px
    font-weight bold
  &__category
    display flex
    align-items center
    padding-bottom 45px
    border-bottom 2px solid var(--gray)
    h2
      font-size 20px
      font-weight 400
      flex-shrink 0
      margin-right 80px
  &__info
    padding-top 45px
  &__attribute
    display flex
    align-items center
    margin-bottom 20px
    &:last-child
      margin-bottom 0
    &--short
      width 760px
    h2
      font-size 20px
      font-weight 400
      flex-shrink 0
      width 285px

.search-select
  position relative
  width 100%
  font-size 20px
  &__empty
    padding 20px 30px
  &__suggestion
    display block
    width 100%
    padding 10px 30px
    cursor pointer
    transition .3s
    &:hover
      @media (hover)
        background var(--gray)
    &-category
      display block
      &--parent
        font-size 14px
        color #252525
  &__suggestions
    border-radius 20px
    border none
    box-shadow: 0px 5px 35px 0px rgba(66, 66, 66, 0.2)
    overflow-y hidden
    position absolute
    top 65px
    background #fff
    width 100%
    opacity 0
    pointer-events none
    z-index 10
    &.active
      opacity 1
    label
      display block
      border-bottom 2px solid var(--gray)
      &:last-child
        border-bottom 0
    input
      display none
      &:checked + .search-select__suggestion
        background var(--red)
        *
          color #fff

.input
  width 100%
  height 55px
  background #fff
  border 2px solid var(--gray)
  border-radius 55px
  padding 0 30px
  font-size inherit
  outline none
  &:focus
    border-color var(--red)
